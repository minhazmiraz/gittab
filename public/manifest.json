{
  "manifest_version": 2,
  "name": "gittab",
  "version": "0.1",
  "description": "Some Description",
  "permissions": ["tabs", "storage", "https://www.github.com/*"],
  "background": {
    "scripts": ["static/js/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "js": ["static/js/content.js"],
      "matches": ["http://*.github.com/*", "https://*.github.com/*"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "192": "logo192.png"
  },
  "browser_action": {
    "default_icon": {
      "192": "logo192.png"
    },
    "default_title": "gittab"
  },
  "options_ui": {
    "page": "options.html"
  }
}
